<script>
    const isNearby = true;

    function fetchNearby() {

        var ajax = new XMLHttpRequest();
        ajax.open("POST", "/fetchNearbyCom", true);

        ajax.onreadystatechange = function() {
            if (this.readyState == 4) {
                if (this.status == 200) {
                    let response = this.responseText
                    response = JSON.parse(this.responseText)
                    // console.log(response)

                    let html = ""
                    for (let a = 0; a < response.data.length; a++) {
                        const user = response.data[a]

                        html += `<li>
                            <div class="nearly-pepls">
                                <figure>
								<a href="/user/` + user._id + `">
									<img src="` + mainURL + `/` + user.profileImage + `" style="width: 100px; height: 80px; object-fit: cover;" onerror="this.src = \'/public/img/default_cover.jpg\';">
								</a>
							</figure>

                                <div class="pepl-info">
                                    <h4>
                                        <a href="` + mainURL + `/user/` + user._id + `">` + user.name + `</a>
                                    </h4>

                                    <span>` + user.country + `</span>
                                </div>
                            </div>
                        </li>`
                    }

                    document.getElementById("people").innerHTML = html
                }

                if (this.status == 500) {
                    console.log(this.responseText)
                }
            }
        }

        var formData = new FormData();
        formData.append("accessToken", localStorage.getItem("accessToken"))
        ajax.send(formData);
    }
</script>

